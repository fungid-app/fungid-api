{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "remoteRoot": "/app"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env.debug"
    },
    {
      "name": "Docker: Image Classifier API",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: ic",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/classifierapi/app",
            "remoteRoot": "/app"
          }
        ],
        "projectType": "general"
      }
    },
    {
      "name": "Docker: Base API",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: api",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/api/",
            "remoteRoot": "/api"
          }
        ],
        "projectType": "general"
      }
    }
  ]
}
