{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env.debug"
    },
    {
      "name": "Docker: Image Classifier API",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: ic",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/classifier-api/app",
            "remoteRoot": "/app"
          }
        ],
        "projectType": "general"
      }
    },
    {
      "name": "Docker: Lanch Base API",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: base-api",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/base-api/",
            "remoteRoot": "/base-api"
          }
        ],
        "projectType": "general"
      }
    }
  ]
}
