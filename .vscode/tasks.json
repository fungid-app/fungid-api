{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build ic",
      "platform": "python",
      "dockerBuild": {
        "tag": "classifierapi:latest",
        "dockerfile": "${workspaceFolder}/classifierapi/Dockerfile",
        "context": "${workspaceFolder}/classifierapi",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: ic",
      "dependsOn": ["docker-build ic"],
      "python": {
        "module": "uvicorn",
        "args": [
          "server:app",
          "--reload",
          "--port 8080",
          "--log-level info",
          "--host 0.0.0.0"
        ]
      },
      "dockerRun": {
        "image": "classifierapi:latest",
        "ports": [
          {
            "containerPort": 8080,
            "hostPort": 9100
          }
        ],
        "env": {
          "BUILD_ENV": "DEBUG"
        },
        "volumes": [
          {
            "localPath": "${workspaceFolder}/classifierapi/app",
            "containerPath": "/app"
          },
          {
            "localPath": "${workspaceFolder}/models/v0.4/prod",
            "containerPath": "/var/data/v0.4.1"
          }
        ]
      }
    },
    {
      "type": "docker-build",
      "label": "docker-build api",
      "platform": "python",
      "dockerBuild": {
        "tag": "api:latest",
        "dockerfile": "${workspaceFolder}/api/Dockerfile",
        "context": "${workspaceFolder}/api",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: api",
      "dependsOn": ["docker-build api"],
      "dockerRun": {
        "image": "api:latest",
        "ports": [{ "containerPort": 8080, "hostPort": 9000 }],
        "env": {
          "BUILD_ENV": "DEBUG"
        },
        "command": "bash",
        "volumes": [
          {
            "localPath": "${workspaceFolder}/api",
            "containerPath": "/api"
          }
        ]
      }
    }
  ]
}
